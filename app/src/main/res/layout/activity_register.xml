<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <!-- App Icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/_3_removebg_preview_2"
            />

        <!-- Name input box -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:hint="First Name"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15sp"
            android:background="@drawable/round_corner"
            android:padding="18dp"
            android:inputType="text"
            android:id="@+id/firstname_input"
            />

        <!-- Last name input box -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Last Name"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15sp"
            android:background="@drawable/round_corner"
            android:padding="18dp"
            android:inputType="text"
            android:id="@+id/lastname_input"
            />

        <!-- Username name input box -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="User Name"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15sp"
            android:background="@drawable/round_corner"
            android:padding="18dp"
            android:inputType="text"
            android:id="@+id/user_input"
            />

        <!-- 1st Attempt Password input box -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Password"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15sp"
            android:background="@drawable/round_corner"
            android:padding="18dp"
            android:inputType="textPassword"
            android:id="@+id/password1_input"
            />

        <!-- 2nd Attempt Password input box -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint=" Confirm Password"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15sp"
            android:background="@drawable/round_corner"
            android:padding="18dp"
            android:inputType="textPassword"
            android:id="@+id/password2_input"
            />

        <!-- Register Button = sends to home page -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textStyle="bold"
            android:backgroundTint="#003465"
            android:textColor="@color/white"
            android:padding="18dp"
            android:layout_marginTop="32dp"
            android:textSize="20sp"
            android:id="@+id/register_btn"
            />

        <!-- Group app LOGO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ClockIn"
            android:textSize="58sp"
            android:textColor="@color/white"
            android:layout_marginTop="32dp"
            android:fontFamily="monospace"
            />




    </LinearLayout>


</RelativeLayout>